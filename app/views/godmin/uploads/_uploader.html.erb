<div class="godmin-uploads">
  <div class = "godmin-uploads__container">
    <%= f.attachment_field attachment, direct: true, class: "godmin-uploads__file-field" %>
    <% if remove %>
      <%= f.hidden_field "remove_#{attachment}", class: "godmin-uploads__remove-field" %>
      <%= link_to "#", class: "godmin-uploads__remove #{'hidden' unless f.object.send(attachment)}" do %>
        <i class="glyphicon glyphicon-remove"></i>
      <% end %>
    <% end %>

      <div class="godmin-uploads__upload-area">

        <div class="godmin-uploads__placeholder <%= 'hidden' if f.object.send(attachment) %>">
          <%= f.label attachment, class:"godmin-uploads__file-label" do %>
            <div class="glyphicon glyphicon-cloud-upload"></div>
            <div><%= t("godmin.uploads.upload_file")%></div>
          <% end %>
        </div>

        <div class="godmin-uploads__preview <%= 'hidden' unless f.object.send(attachment) %>">
          <% if preview %>
            <%= attachment_image_tag(f.object, attachment, :fill, 160, 160, fallback: "http://placehold.it/150/f5f5f5/cccccc") %>
          <% else %>
            <div class="glyphicon glyphicon-file"></div>
          <% end %>
          <div class="godmin-uploads__mask-download">
            <%= link_to attachment_url(f.object, attachment), class: "godmin-uploads__download-link" do %>
              <span class="glyphicon glyphicon-arrow-down"></span>
              <span><%= "Download" %></span>
            <% end %>
          </div>
          <div class="godmin-uploads__mask-update">
            <%= f.label attachment, class:"godmin-uploads__file-label" do %>
              <span class="glyphicon glyphicon-cloud-upload"></span>
              <span><%= "Update" %></span>
            <% end %>
          </div>
        </div>
      </div>

    <div class="godmin-uploads__info">
      <div class="godmin-uploads__info__progress progress hidden">
        <div class="progress-bar progress-bar-striped active" style="width: 0%;">
        </div>
      </div>
      <div class="godmin-uploads__info__filename <%= 'hidden' unless f.object.send(attachment) %>">
        <%# TODO %>
      </div>
    </div>
  </div>
</div>
